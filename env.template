# Sentinel RAG Template - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Sentinel Interceptor Configuration
# ===========================================

# Interceptor Backend URL
SENTINEL_URL=http://localhost:8000

# API Key for Interceptor authentication
SENTINEL_API_KEY=sk_live_demo_123

# ===========================================
# LLM Configuration
# ===========================================

# OpenRouter API Key
OPENROUTER_API_KEY=your-openrouter-api-key-here

# LLM Model Configuration
LLM_MODEL=gpt-4-turbo-preview
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# ===========================================
# Agent Configuration
# ===========================================

AGENT_VERBOSE=false
AGENT_MAX_ITERATIONS=10
AGENT_PORT=8001
AGENT_URL=http://localhost:8001

# ===========================================
# MCP Server Configuration
# ===========================================

MCP_HOST=0.0.0.0
MCP_PORT=9000
MCP_INTERCEPTOR_TOKEN=mcp-secret-token

# ===========================================
# Redis Configuration
# ===========================================

REDIS_URL=redis://localhost:6379/0

# ===========================================
# OpenTelemetry Configuration
# ===========================================

OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
