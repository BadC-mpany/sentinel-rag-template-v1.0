# URL where the Interceptor service is running
SENTINEL_URL=http://localhost:8000

# API Key for authenticating with the Interceptor
SENTINEL_API_KEY=sk_live_demo_123

# OpenRouter - LLM Provider
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Used by MCP to send tool results back to the Agent
AGENT_URL=http://localhost:8001

# Host and port where the MCP server listens for Interceptor requests
MCP_HOST=0.0.0.0
MCP_PORT=9000

# Authentication token for MCP server (basic auth between Interceptor and MCP)
MCP_INTERCEPTOR_TOKEN=mcp-secret-token

# AGENT CONFIG

AGENT_PORT=8001
LLM_MODEL=nvidia/nemotron-nano-9b-v2:free
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096

# Maximum number of tool-calling iterations per agent invocation
AGENT_MAX_ITERATIONS=10

# Enable verbose agent logging
AGENT_VERBOSE=false


# Configured in sentinel_config.yaml, but can be overridden here if needed
SESSION_TTL=3600

# ===========================================
# Observability (Optional)
# ===========================================

# Enable OpenTelemetry tracing
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
LOG_FORMAT=text
